a{
    position: relative;
    text-decoration: none;
    transition: all 0.50s ease 0s;
    border: 1px solid black;
    box-shadow: 0px 5px 30px black;
    color: black;
    padding: 5px;
}
a:hover{
    transition:all 0.50s ease 0s ;
    box-shadow: 0px 5px 50px black;
    color: white;
    background-color: black;
    padding: 10px;
}
